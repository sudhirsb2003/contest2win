<% @title = 'Create' %>

<% unless (campaigns = Campaign.creation.live.running.find(:all, :limit => 5)).empty? %>
<div class="creation_campaign_links">
<h2>Creation Campaigns Live:</h2>
<ul class="side_by_side pipes">
<% campaigns.each_with_index do |campaign, i| %>
	<li <%= 'class="last"' if i==campaigns.size-1 %>><%= link_to_contest campaign %></li>
<% end %>
</ul>
</div>
<% end %>

<div style="background-color:#f4f4f4" class="nav">
