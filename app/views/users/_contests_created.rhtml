<% contests.each_slice(4) {|slice| %>
<ul class="contests">
  <% slice.each { |contest| %>
  <li><div class="thumb"><%= link_to image_tag_for_contest(contest), contest_path(contest.url_attributes) %></div>
  <%= link_to_contest contest %>
  <span><%= number_with_delimiter(contest.votes.sum(:points)||0) %> votes (<%= time_ago_in_words contest.created_on %> ago)</span>
</li>
  <% } %>
</ul>
<% } %>
