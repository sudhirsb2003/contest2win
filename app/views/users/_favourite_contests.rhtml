<% favourites.each_slice(4) {|slice| %>
<ul class="contests">
  <% slice.each { |contest| %>
  <li><div class="thumb"><%= link_to image_tag_for_contest(contest), contest_path(contest.url_attributes) %></div>
  <%= link_to_contest contest %>
  <span>Favourited <%= number_with_delimiter(contest.favourites.count||0) %> times</span>
</li>
  <% } %>
</ul>
<% } %>
